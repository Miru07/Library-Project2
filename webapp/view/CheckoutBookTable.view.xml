<mvc:View
  	controllerName="org.ubb.books.controller.CheckoutBookTable"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">

   <Table id="checkoutBookTable"
		items="{
			path: '/CheckoutBooks',
			sorter: {
				path: 'Title'
			}
		}"
		growing="true"
		growingThreshold="10"
		mode="SingleSelectLeft"
		updateFinished="onUpdateFinished">

		<headerToolbar>
			<OverflowToolbar>
				<content>
					  <Button
						text="Book a book"
						press="onBookBook"/>
					<ToolbarSpacer />
					<ToggleButton id="toggleInfoToolbar"
					  text="Hide/Show InfoToolbar"
					  press="onToggleInfoToolbar" />
				</content>
			</OverflowToolbar>
		</headerToolbar>

		<infoToolbar>
			<OverflowToolbar>
				<Label text="If red -> no booking allowed"/>
			</OverflowToolbar>
		</infoToolbar>

		<columns>
			<Column>
				<Text text="Title" />
			</Column>
			<Column>
				<Text text="Author" />
			</Column>
			<Column>
				<Text text="Published on" />
			</Column>
			<Column>
				<Text text="Language" />
			</Column>
            <Column>
				<Text text="Available books" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						title="{Title}"
						text="{ISBN}"/>
					<Text text="{Author}" />
					<Text text="{ 
							path: 'Published',
							type: 'sap.ui.model.type.Date'
               			}" 
					/>
					<Text text="{Language}" />
					<Text text="{= parseInt(${Available}) }" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>